{
  "environment": "production",
  "app": {
    "name": "myApp",
    "path": "../path/to/meteor/root",
    "binaryNpmModules": {
      "yourDep": ["bin1", "bin2"]
    }
  },

  "defaults": {
    "hosts": {
      "username": "ubuntu"
    },
    "services": {
      "settingsPath": "./production.settings.json",
      "env": {
        "MONGO_URL":        "mongodb://db.domain.com/database",
        "MONGO_OPLOG_URL":  "mongodb://db.domain.com/local",
        "ROOT_URL":         "https://your.app.domain.com/"
      }
    }
  },

  "hosts": [
    {
      "name": "app1.yourdomain.com",
      "services": [
        { "name": "app-1", "settingsPath": "./production.settings.app1.json", "env": { "PORT": 8080 } },
        { "name": "app-2", "env": { "PORT": 8081 } }
      ]
    },
    {
      "name": "app2.yourdomain.com",
      "services": [
        { "name": "app-1", "env": { "PORT": 8080, "MONGO_URL": "mongodb://gibraltar.co/db13" } },
        { "name": "app-2", "env": { "PORT": 8081 } }
      ]
    }
  ],
  
  "hooks": {
    "--comment": "Hooks run on the local machine",
    "preBuild": "../path/to/script.sh",
    "preDeploy": null,
    "postDeploy": null
  }
}
